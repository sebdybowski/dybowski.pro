---
import Svg from "../assets/svg/Team_building_Monochromatic_2.svg";
import Section from "../components/Section/Section.astro";

const sectionTitle = "leadership";

const achievements = [
  {
    metric: "15+",
    label: "Team Members Led",
    description: "Successfully managed cross-functional teams",
    icon: "üë•",
    color: "var(--pico-primary)",
  },
  {
    metric: "95%",
    label: "Team Satisfaction",
    description: "Consistently high team morale and engagement",
    icon: "üòä",
    color: "var(--pico-secondary)",
  },
  {
    metric: "100%",
    label: "Project Success Rate",
    description: "All projects delivered on time and within budget",
    icon: "üéØ",
    color: "var(--pico-primary)",
  },
];

const leadershipPrinciples = [
  {
    title: "Servant Leadership",
    description: "Putting team needs first and removing obstacles",
    icon: "ü§ù",
  },
  {
    title: "Psychological Safety",
    description: "Creating an environment where everyone can speak up",
    icon: "üõ°Ô∏è",
  },
  {
    title: "Continuous Learning",
    description: "Encouraging growth and knowledge sharing",
    icon: "üìö",
  },
  {
    title: "Data-Driven Decisions",
    description: "Using metrics and feedback to guide improvements",
    icon: "üìä",
  },
];
---

<Section
  id={sectionTitle}
  svg={Svg}
  svgAlt="Team development illustration"
  title={sectionTitle}
>
  <div class="leadership-content">
    <p>
      As a team lead and agile coach, I'm all about empowering my team to
      deliver amazing results. I lead by example, fostering an environment of
      collaboration, trust, and transparency. Whether we're using Scrum, Kanban,
      or another agile framework, I make sure everyone is aligned, motivated,
      and working towards a common goal.
    </p>

    <div class="achievements-section">
      <h3>Leadership Impact</h3>
      <div class="achievements-grid">
        {
          achievements.map((achievement) => (
            <div
              class="achievement-card"
              style={`--accent-color: ${achievement.color}`}
            >
              <div class="achievement-icon">{achievement.icon}</div>
              <div class="achievement-metric">{achievement.metric}</div>
              <div class="achievement-label">{achievement.label}</div>
              <div class="achievement-description">
                {achievement.description}
              </div>
            </div>
          ))
        }
      </div>
    </div>

    <div class="principles-section">
      <h3>Leadership Principles</h3>
      <div class="principles-grid">
        {
          leadershipPrinciples.map((principle) => (
            <div class="principle-card">
              <div class="principle-icon">{principle.icon}</div>
              <div class="principle-content">
                <h4 class="principle-title">{principle.title}</h4>
                <p class="principle-description">{principle.description}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>

  <style>
    .leadership-content {
      display: flex;
      flex-direction: column;
      gap: 2rem;
    }

    .achievements-section,
    .methodologies-section,
    .principles-section {
      margin-top: 1.5rem;
    }

    .achievements-section h3,
    .methodologies-section h3,
    .principles-section h3 {
      color: var(--pico-primary);
      margin-bottom: 1.5rem;
      font-size: 1.2rem;
    }

    .achievements-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1rem;
    }

    .achievement-card {
      background: var(--pico-card-background-color);
      border: 2px solid var(--accent-color);
      border-radius: var(--pico-border-radius);
      padding: 1.5rem;
      text-align: center;
      transition:
        transform 0.2s ease,
        box-shadow 0.2s ease;
      position: relative;
      overflow: hidden;
    }

    .achievement-card::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: var(--accent-color);
    }

    .achievement-card:hover {
      transform: translateY(-4px);
      box-shadow: var(--pico-card-box-shadow);
    }

    .achievement-icon {
      font-size: 2rem;
      margin-bottom: 0.5rem;
    }

    .achievement-metric {
      font-size: 2.5rem;
      font-weight: bold;
      color: var(--accent-color);
      margin-bottom: 0.25rem;
    }

    .achievement-label {
      font-weight: 600;
      color: var(--pico-color);
      margin-bottom: 0.5rem;
    }

    .achievement-description {
      font-size: 0.9rem;
      color: var(--pico-muted-color);
      line-height: 1.4;
    }

    .methodologies-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
      gap: 0.75rem;
    }

    .methodology-item {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 1rem;
      background: var(--pico-card-background-color);
      border: 1px solid var(--pico-muted-border-color);
      border-radius: var(--pico-border-radius);
      transition:
        transform 0.2s ease,
        background-color 0.2s ease;
      text-align: center;
    }

    .methodology-item:hover {
      transform: translateY(-2px);
      background: var(--pico-primary-background);
    }

    .methodology-header {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      margin-bottom: 0.5rem;
    }

    .methodology-icon {
      font-size: 1.25rem;
    }

    .methodology-name {
      font-weight: 600;
      color: var(--pico-color);
    }

    .methodology-level {
      font-size: 0.8rem;
      color: var(--pico-muted-color);
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .principles-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1rem;
    }

    .principle-card {
      display: flex;
      align-items: flex-start;
      gap: 1rem;
      padding: 1.25rem;
      background: var(--pico-card-background-color);
      border: 1px solid var(--pico-muted-border-color);
      border-radius: var(--pico-border-radius);
      transition:
        transform 0.2s ease,
        box-shadow 0.2s ease;
    }

    .principle-card:hover {
      transform: translateY(-2px);
      box-shadow: var(--pico-card-box-shadow);
    }

    .principle-icon {
      font-size: 1.5rem;
      flex-shrink: 0;
    }

    .principle-title {
      margin: 0 0 0.5rem 0;
      color: var(--pico-color);
      font-size: 1rem;
      font-weight: 600;
    }

    .principle-description {
      margin: 0;
      color: var(--pico-muted-color);
      font-size: 0.9rem;
      line-height: 1.4;
    }

    @media (max-width: 768px) {
      .achievements-grid {
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
      }

      .methodologies-grid {
        grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
      }

      .principles-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</Section>
