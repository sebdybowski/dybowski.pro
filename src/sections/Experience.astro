---
import { Binary, Code2, Landmark, PlugZap, Sparkles } from "lucide-preact";
import Company from "../components/Company.astro";
import SectionTitle from "../components/SectionTitle.astro";

const id = "experience";
const size = "4.25rem";
---

<section class="container-hybrid companies" id={id}>
  <div class="companies__inner">
    <div class="text--center">
      <SectionTitle id={id} title={id} />
      <p>Companies I had a pleasure to cooperate with:</p>
    </div>
    <div class="grid">
      <Company name="J-Labs" type="IT Services On-demand">
        <Code2 size={size} />
      </Company>
      <Company name="Shell Energy" type="Energy Supplier">
        <PlugZap size={size} />
      </Company>
      <Company name="UBS" type="Investment Bank">
        <Landmark size={size} />
      </Company>
      <Company name="Lumesse" type="Talent Acquisiton">
        <Sparkles size={size} />
      </Company>
      <Company name="Intive" type="IT Services On-demand">
        <Code2 size={size} />
      </Company>
      <Company name="Comarch" type="Software Development">
        <Binary size={size} />
      </Company>
    </div>
  </div>
</section>

<style>
  #experience {
    margin: 0;
  }

  .companies {
    margin-bottom: 2rem;
    background: var(--card-background-color);
    box-shadow: inset var(--card-box-shadow);
  }

  .companies__inner {
    padding: var(--block-spacing-vertical) 0;
  }

  .grid {
    grid-template-columns: auto auto auto;
  }

  @media screen and (max-width: 1200px) {
    .grid {
      grid-template-columns: auto auto auto;
    }
  }

  @media screen and (max-width: 992px) {
    .grid {
      grid-template-columns: auto auto;
    }
  }

  h1,
  p {
    text-align: center;
  }
</style>
