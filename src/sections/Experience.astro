---
import Company from "../components/Company.astro";
import { Icon } from "astro-icon";
import SectionTitle from "../components/SectionTitle.astro";

const id = "experience";
const size = "4.25rem";

const companies = [
  { name: "J-Labs", type: "IT Services On-demand", icon: "solar-code-square-line-duotone"},
  { name: "Shell Energy", type: "Energy Supplier", icon: "solar-electric-refueling-line-duotone"},
  { name: "UBS", type: "Investment Bank", icon: "solar-banknote-2-line-duotone"},
  { name: "Lumesse", type: "Talent Acquisiton", icon: "solar-hand-stars-line-duotone"},
  { name: "Intive", type: "IT Services On-demand", icon: "solar-code-square-line-duotone"},
  { name: "Comarch", type: "Software Development", icon: "solar-monitor-smartphone-line-duotone"},
];
---

<section class="container-hybrid companies" id={id}>
  <div class="companies__inner">
    <div class="text--center">
      <SectionTitle id={id} title={id} />
      <p>Companies I had a pleasure to cooperate with:</p>
    </div>
    <div class="grid">
      {companies.map(({icon, ...company}) => (
        <Company {...company}>
          <Icon name={icon} width={size} height={size}/>
        </Company>
      ))}
    </div>
  </div>
</section>

<style>
  #experience {
    margin: 0;
  }

  .companies {
    margin-bottom: 2rem;
    background: var(--card-background-color);
    box-shadow: inset var(--card-box-shadow);
  }

  .companies__inner {
    padding: var(--block-spacing-vertical) 0;
  }

  .grid {
    grid-template-columns: auto auto auto;
  }

  .company__icon > svg {
    width: 4rem;
    height: 4rem;
    line-height: initial;
  }

  @media screen and (max-width: 1200px) {
    .grid {
      grid-template-columns: auto auto auto;
    }
  }

  @media screen and (max-width: 992px) {
    .grid {
      grid-template-columns: auto auto;
    }

    .company__icon {
      font-size: 2rem;
    }
  }

  h1,
  p {
    text-align: center;
  }
</style>
