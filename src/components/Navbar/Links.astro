---
import LinkButton from "../LinkButton/LinkButton.astro";

interface Link {
  id: string;
  label: string;
}

interface Props {
  links: Link[];
}

const { links } = Astro.props;
---

<ul class="links">
  {
    links.map(({ id, label }) => (
      <li>
        <a href={`#${id}`}>{label}</a>
      </li>
    ))
  }
  <li class="visible--sticky">
    <LinkButton
      href="https://pl.linkedin.com/in/sebastian-dybowski"
      label="hire me"
      icon="lucide:heart-handshake"
    />
  </li>
</ul>
