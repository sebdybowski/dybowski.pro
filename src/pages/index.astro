---
import { Counter } from "../components/Counter";
import "../global.css";
import {
  Github,
  Linkedin,
  Mail,
  HeartHandshake,
  MailCheck,
  ExternalLink,
} from "lucide-preact";

const year = new Date().getFullYear().toString();
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Seb Dybowski - Software Engineer & UI/UX Designer"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Seb Dybowski - Software Engineer & UI/UX Designer</title>
  </head>
  <body>
    <main class="container">
      <div class="grid">
        <div>
          <nav>
            <ul>
              <li>
                <a href="https://github.com/sebdybowski">
                  <Github />
                </a>
              </li>
              <li>
                <a href="https://pl.linkedin.com/in/sebastian-dybowski">
                  <Linkedin />
                </a>
              </li>
              <li>
                <a href="mailto:dybowski.seb@gmail.com">
                  <Mail />
                </a>
              </li>
            </ul>
          </nav>
          <article>
            <hgroup>
              <h1>Hi, I'm <strong class="gradient-mark">Seb</strong></h1>
              <br />
              <span>Implementing software since:</span>
              <h4><Counter client:load /></h4>
            </hgroup>
            <ul>
              <li>Full-stack software developer</li>
              <li>UI/UX Designer</li>
              <li>Technical Leader & Agile Coach</li>
            </ul>
            <div class="grid">
              <a
                href="https://pl.linkedin.com/in/sebastian-dybowski"
                role="button"><HeartHandshake /> Hire me</a
              >
              <a href="mailto:dybowski.seb@gmail.com" role="button"
              ><MailCheck /> Get in touch</a
              >
            </div>
          </article>
          <footer>
            <strong>{year}</strong>
            <hr />
            <p>
              Proudly crafted with <a href="https://astro.build/">
                <ExternalLink size={16} /> astro</a
              > and <a href="https://picocss.com/">
                <ExternalLink size={16} /> picocss</a
              >.
            </p>
          </footer>
        </div>
        <div></div>
      </div>
    </main>
  </body>
</html>

<style>
  body {
    background-image: url("../assets/img/seb-lg.webp");
    background-size: contain;
    background-position: bottom right 20%;
  }

  main {
    text-align: center;
  }

  body > main {
    padding: 0;
    height: 100vh;
    display: grid;
    align-items: center;
  }

  nav {
    justify-content: center;
  }

  a[role="button"] {
    border-radius: 1rem;
  }

  a[role="button"]::after {
    content: " ";
    background-color: black;
  }

  article {
    margin: 1rem 0;
  }

  footer {
    backdrop-filter: blur(0.25rem);
    background-color: rgba(255, 255, 255, 0.25);
    border-radius: var(--border-radius);
  }

  @media screen and (max-width: 1400px) {
    body {
      background-position: bottom right;
    }
  }

  @media screen and (max-width: 1200px) {
    body {
      background-position: bottom right -40%;
    }
  }

  @media screen and (max-width: 992px) {
    body {
      background-size: 80%;
      background-position: top 10% center;
    }

    article {
      margin-top: 50vh;
    }

    a[role="button"] {
      margin-top: 1rem;
    }
  }

  @media screen and (max-width: 768px) {
    article {
      margin-top: 30vh;
    }
  }
</style>
